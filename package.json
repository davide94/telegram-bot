  "devDependencies": {
    "@types/aws-lambda": "^8.10.47",
    "@types/node": "^13.11.0",
    "@types/node-telegram-bot-api": "^0.40.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "prettier-standard": "^16.2.1",
    "serverless": "^1.67.2",
    "serverless-domain-manager": "^3.3.1",
    "serverless-dotenv-plugin": "^2.4.2",
